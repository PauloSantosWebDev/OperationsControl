{% extends 'layout.njk' %}

{% block content %}
    <div class="container mt-5">
        <h1 style="color: #E63C2B; font-weight: bold;">Update/delete supervisors form</h1>
    </div>
    <div class="container mt-5">
        <form class="row g-3">
            <div class="col-md-4">
                <label for="inputSearchSupervisor" class="form-label">Select Supervisor</label>
                <select class="form-select" id="selectSupervisor">
                    {% for opt in toParse %}
                    <option value="{{opt.firstName + opt.lastName}}">{{opt.firstName + ' ' + opt.lastName}}</option>
                    {% endfor %}
                </select>
            </div>
            <hr>
            <div class="col-md-3">
                <label for="inputSupervisorFirstName" class="form-label">First Name</label>
                <input type="text" class="form-control" id="inputSupervisorFirstName">
            </div>
            <div class="col-md-3">
                <label for="inputSupervisorLastName" class="form-label">Last Name</label>
                <input type="text" class="form-control" id="inputSupervisorLastName">
            </div>
            <div class="col-md-4">
                <label for="inputSupervisorEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputSupervisorEmail">
            </div>
            <div class="col-md-2">
                <label for="inputSupervisorPhone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="inputSupervisorPhone">
            </div>
            <div class="col-12" style="text-align: right;">
                <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" data-bs-target="#deleteBtnCheck">Delete</button>
                <button type="reset" class="btn btn-dark me-md-2">Reset</button>
                <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" data-bs-target="#updateBtnCheck">Update</button>
            </div>
        </form>
    </div>
    <hr>
    <div class="container mt-5">
        <h1>Supervisors Register</h1>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col" valign="middle" style="text-align: center;">Number</th>
                    <th scope="col" valign="middle" style="text-align: center;">First Name</th>
                    <th scope="col" valign="middle" style="text-align: center;">Last Name</th>
                    <th scope="col" valign="middle" style="text-align: center;">Email</th>
                    <th scope="col" valign="middle" style="text-align: center;">Phone</th>
                </tr>
            </thead>
            <tbody>
                {% for t in toParse %}
                    <tr>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.supervisorId}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.firstName}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.lastName}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.email}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.phone}}</td>
                    </tr>
                {% endfor %}
                <tr>
                    
                </tr>
            </tbody>
        </table>
    </div>

    <!--Confirmation form for Delete button-->
    <div class="modal fade" id="deleteBtnCheck" tabindex="-1" aria-labelledby="deleteBtnCheckLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assetAllocationLabel">Are you sure you want to delete this register?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark me-md-2" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" id="js-delete-record">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!--Confirmation form for Update button-->
    <div class="modal fade" id="updateBtnCheck" tabindex="-1" aria-labelledby="updateBtnCheckLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assetAllocationLabel">Are you sure you want to update this register?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark me-md-2" data-bs-dismiss="modal">Cancel</button>
                    {# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button> #}
                    {# <button type="button" class="btn btn-primary">Allocation</button> #}
                    <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" id="js-update-record">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/upddelsupervisor.js"></script>
{% endblock %}