{% extends 'layout.njk' %}

{% block content %}
    <div class="container mt-5">
        <h1 style="color: #E63C2B; font-weight: bold;">Update/delete client</h1>
    </div>
    <div class="container mt-5">
        <form class="row g-3">
            <div class="col-md-4">
                <label for="inputSearchClient" class="form-label">Select Client</label>
                <select class="form-select" id="selectClient">
                    {% for opt in toParse%}
                    <option value="{{opt.clientName}}">{{opt.clientName}}</option>
                    {% endfor %}
                </select>
            </div>
            <hr>
            <div class="col-md-5">
                <label for="inputClientName" class="form-label">Client Name</label>
                <input type="text" class="form-control" id="inputClientName">
            </div>
            <div class="col-md-5">
                <label for="inputClientEmail" class="form-label">Email</label>
                <input type="email" class="form-control" id="inputClientEmail">
            </div>
            <div class="col-md-2">
                <label for="inputClientPhone" class="form-label">Phone</label>
                <input type="text" class="form-control" id="inputClientPhone">
            </div>
            <div class="col-md-5">
                <label for="inputAddress" class="form-label">Address</label>
                <input type="text" class="form-control" id="inputAddress">
            </div>
            <div class="col-md-3">
                <label for="inputCity" class="form-label">City</label>
                <input type="text" class="form-control" id="inputCity">
            </div>
            <div class="col-md-2">
                <label for="inputState" class="form-label">State</label>
                <select id="selectState" class="form-select">
                    <option value="NSW">New South Wales</option>
                    <option value="VIC">Victoria</option>
                    <option value="QLD">Queensland</option>
                    <option value="SA" selected>South Australia</option>
                    <option value="WA">Western Australia</option>
                    <option value="TAS">Tasmania</option>
                    <option value="ACT">Australian Capital Territory</option>
                    <option value="NT">Northern Territory</option>
                </select>
            </div>
            <div class="col-md-2">
                <label for="inputPostcode" class="form-label">Postcode</label>
                <input type="text" class="form-control" id="inputPostcode">
            </div>
            <div class="col-12" style="text-align: right;">
                <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" data-bs-target="#deleteBtnCheck">Delete</button>
                <button type="reset" class="btn btn-dark me-md-2">Reset</button>
                <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" data-bs-target="#updateBtnCheck">Update</button>
            </div>
        </form>
    </div>
    <hr>
    <div class="container mt-5">
        <h1>Clients Register</h1>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col" valign="middle" style="text-align: center;">Number</th>
                    <th scope="col" valign="middle" style="text-align: center;">Client Name</th>
                    <th scope="col" valign="middle" style="text-align: center;">Email</th>
                    <th scope="col" valign="middle" style="text-align: center;">Phone</th>
                    <th scope="col" valign="middle" style="text-align: center;">Address</th>
                    <th scope="col" valign="middle" style="text-align: center;">City</th>
                    <th scope="col" valign="middle" style="text-align: center;">State</th>
                    <th scope="col" valign="middle" style="text-align: center;">Postcode</th>
                </tr>
            </thead>
            <tbody>
                {% for t in toParse %}
                    <tr>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.clientId}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.clientName}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.email}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.phone}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.address}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.city}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.state}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.postcode}}</td>
                    </tr>
                {% endfor %}
                <tr>
                    
                </tr>
            </tbody>
        </table>
    </div>

    <!--Confirmation form for Delete button-->
    <div class="modal fade" id="deleteBtnCheck" tabindex="-1" aria-labelledby="deleteBtnCheckLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assetAllocationLabel">Are you sure you want to delete this register?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark me-md-2" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" id="js-delete-record">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!--Confirmation form for Update button-->
    <div class="modal fade" id="updateBtnCheck" tabindex="-1" aria-labelledby="updateBtnCheckLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assetAllocationLabel">Are you sure you want to update this register?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark me-md-2" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" id="js-update-record">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/upddelclient.js"></script>
{% endblock %}