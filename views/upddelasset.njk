{% extends 'layout.njk' %}

{% block content %}   
    <div class="container mt-5">
        <h1 style="color: #E63C2B; font-weight: bold;">Update/delete assets form</h1>
    </div>
    <div class="container mt-5">
        <form class="row g-3">
            <div class="col-md-4">
                <label for="inputSearchAsset" class="form-label">Select Asset</label>
                <select class="form-select">
                    <option>Text1</option>
                    <option>Text2</option>
                </select>
            </div>
            <hr>
            <div class="col-md-4">
                <label for="inputCSAssetId" class="form-label">Crane Services ID</label>
                <input type="text" class="form-control" id="inputCSAssetId">
            </div>
            <div class="col-md-4">
                <label for="inputAssetName" class="form-label">Asset Name</label>
                <input type="text" class="form-control" id="inputAssetName">
            </div>
            {# <div class="col-md-4">
                <label for="assetsAllocation" class="form-label">Asset</label>
                <select id="assetsAllocation" class="form-select">
                    <option>Options</option>                           
                </select>
            </div> #}
            <div class="col-md-4">
                <label for="inputAssetType" class="form-label">Asset Type</label>
                <select class="form-select">
                    <option>Option1</option>
                    <option>Option2</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="assetDescription" class="form-label">Description</label>
                <textarea class="form-control" id="assetDescription" rows="3"></textarea>
            </div>
            <div class="col-12" style="text-align: right;">
                <button type="button" class="btn btn-danger me-md-2">Delete</button>
                <button type="reset" class="btn btn-dark me-md-2">Reset</button>
                <button type="submit" class="btn btn-danger me-md-2">Update</button>
            </div>
        </form>
    </div>
    <hr>
    <div class="container mt-5">
        <h1>Area to show the data</h1>
    </div>
{% endblock %}