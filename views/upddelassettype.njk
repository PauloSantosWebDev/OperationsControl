{% extends 'layout.njk' %}

{% block content %}
    <div class="container mt-5">
        <h1 style="color: #E63C2B; font-weight: bold;">Update/delete assets type form</h1>
    </div>
    <div class="container mt-5">
        <form class="row g-3">
            <div class="col-md-4">
                <label for="inputSearchAssetType" class="form-label">Select Asset Type</label>
                <select class="form-select" id="selectAssetType">
                    {% for opt in toParse %}
                        <option value={{opt.assetType}}>{{opt.assetType}}</option>
                    {% endfor %}
                </select>
            </div>
            <hr>
            <div class="col-md-12">
                <label for="inputAssetType" class="form-label">Asset type</label>
                <input type="text" class="form-control" id="inputAssetType">
            </div>
            <div class="mb-3">
                <label for="assetTypeDescription" class="form-label">Description</label>
                <textarea class="form-control" id="assetTypeDescription" rows="3"></textarea>
            </div>
            <div class="col-12" style="text-align: right;">
                <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" data-bs-target="#deleteBtnCheck">Delete</button>
                <button type="reset" class="btn btn-dark me-md-2">Reset</button>
                <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" data-bs-target="#updateBtnCheck">Update</button>
            </div>
        </form>
    </div>
    <hr>
    <div class="container mt-5">
        <h1>Asset Type Register</h1>
        <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th scope="col" valign="middle" style="text-align: center;">Number</th>
                        <th scope="col" valign="middle" style="text-align: center;">Asset Type</th>
                        <th scope="col" valign="middle" style="text-align: center;">Description</th>
                    </tr>
                </thead>
                <tbody>
                    {% for t in toParse %}
                        <tr>
                            <td scope="col" valign="middle" style="text-align: center;">{{t.assetTypeId}}</td>
                            <td scope="col" valign="middle" style="text-align: center;">{{t.assetType}}</td>
                            <td scope="col" valign="middle" style="text-align: center;">{{t.description}}</td>
                        </tr>
                    {% endfor %}
                    <tr>
                        
                    </tr>
                </tbody>
        </table>
    </div>

    <!--Confirmation form for Delete button-->
    <div class="modal fade" id="deleteBtnCheck" tabindex="-1" aria-labelledby="deleteBtnCheckLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assetAllocationLabel">Are you sure you want to delete this register?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark me-md-2" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" id="js-delete-record">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!--Confirmation form for Update button-->
    <div class="modal fade" id="updateBtnCheck" tabindex="-1" aria-labelledby="updateBtnCheckLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assetAllocationLabel">Are you sure you want to update this register?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark me-md-2" data-bs-dismiss="modal">Cancel</button>
                    {# <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Back</button> #}
                    {# <button type="button" class="btn btn-primary">Allocation</button> #}
                    <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" id="js-update-record">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascripts/upddelassettype.js"></script>
{% endblock %}