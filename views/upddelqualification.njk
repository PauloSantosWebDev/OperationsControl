{% extends 'layout.njk' %}

{% block content %}
    <div class="container mt-5">
        <h1 style="color: #E63C2B; font-weight: bold;">Update/delete qualifications form</h1>
    </div>
    <div class="container mt-5">
        <form class="row g-3">
            <div class="col-md-4">
                <label for="inputSearchQualification" class="form-label">Select Qualification</label>
                <select class="form-select" id="selectQualification">
                    {% for opt in toParse %}
                    <option value="{{opt.qualification}}">{{opt.qualification}}</option>
                    {% endfor %}
                </select>
            </div>
            <hr>
            <div class="col-md-8">
                <label for="inputQualification" class="form-label">Qualification</label>
                <input type="text" class="form-control" id="inputQualification" placeholder="Semi driver">
            </div>
            <div class="col-md-4">
                <label for="inputQualificationCode" class="form-label">Qualification Code</label>
                <input type="text" class="form-control" id="inputQualificationCode" placeholder="MC">
            </div>
            <div class="mb-3" style="margin-bottom: 0px;">
                <label for="qualificationDescription" class="form-label">Description</label>
                <textarea class="form-control" id="qualificationDescription" rows="3" placeholder="Please describe what is expected for this function."></textarea>
            </div>
            <div class="col-6" style="margin-top: 0px;">
                <a href="https://www.safework.sa.gov.au/licence-and-registration/apply-renew/high-risk-work-licences/hrw-classes" target="_blank">In doubt? Check SA Licenses</a>
            </div>
            <div class="col-6" style="text-align: right;">
                <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" data-bs-target="#deleteBtnCheck">Delete</button>
                <button type="reset" class="btn btn-dark me-md-2">Reset</button>
                <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" data-bs-target="#updateBtnCheck">Update</button>
            </div>
        </form>
    </div>
    <hr>
    <div class="container mt-5">
        <h1>Qualifications Register</h1>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col" valign="middle" style="text-align: center;">Number</th>
                    <th scope="col" valign="middle" style="text-align: center;">Qualification</th>
                    <th scope="col" valign="middle" style="text-align: center;">Qualification Code</th>
                    <th scope="col" valign="middle" style="text-align: center;">Description</th>
                </tr>
            </thead>
            <tbody>
                {% for t in toParse %}
                    <tr>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.qualificationId}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.qualification}}</td>
                        <td scope="col" valign="middle" style="text-align: center;">{{t.qualificationCode}}</td>
                        <td scope="col" valign="middle" style="text-align: center; word-wrap: break-word; white-space: normal; max-width: 400px;">{{t.description}}</td>
                    </tr>
                {% endfor %}
                <tr>
                    
                </tr>
            </tbody>
        </table>
    </div>

    <!--Confirmation form for Delete button-->
    <div class="modal fade" id="deleteBtnCheck" tabindex="-1" aria-labelledby="deleteBtnCheckLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assetAllocationLabel">Are you sure you want to delete this register?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark me-md-2" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" id="js-delete-record">Confirm</button>
                </div>
            </div>
        </div>
    </div>

    <!--Confirmation form for Update button-->
    <div class="modal fade" id="updateBtnCheck" tabindex="-1" aria-labelledby="updateBtnCheckLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="assetAllocationLabel">Are you sure you want to update this register?</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <div class="modal-footer">
                    <button type="button" class="btn btn-dark me-md-2" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger me-md-2" data-bs-toggle="modal" id="js-update-record">Confirm</button>
                </div>
            </div>
        </div>
    </div>
    
    <script src="/javascripts/upddelqualification.js"></script>
{% endblock %}